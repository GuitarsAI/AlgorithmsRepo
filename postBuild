python2 -m pip install ipykernel
python2 -m ipykernel install --user

npm install -g ijavascript
ijsinstall

git clone https://github.com/notablemind/jupyter-nodejs.git
cd jupyter-nodejs
mkdir -p ~/.ipython/kernels/nodejs/
npm install && node install.js
npm run build
npm run build-ext

cd ~/
mkdir temp_for_zip_extract
unzip ijava-1.2.0.zip -d temp_for_zip_extract
cd temp_for_zip_extract
python3 install.py --sys-prefix

cd ~/
python -m bash_kernel.install

python -m sos_notebook.install

jupyter contrib nbextension install --user
jupyter-nbextension install rise --py --sys-prefix

# enable nbserverproxy
jupyter serverextension enable --sys-prefix nbserverproxy
# install the bokeh server extension so that
# bokeh launches at startup
mv bokehserverextension.py ${NB_PYTHON_PREFIX}/lib/python*/site-packages/
# enable bokeh extension
jupyter serverextension enable --sys-prefix bokehserverextension

# run matplotlib once to generate the font cache
python -c "import matplotlib as mpl; mpl.use('Agg'); import pylab as plt; fig, ax = plt.subplots(); fig.savefig('test.png')"
	
test -e test.png && rm test.png

jupyter kernelgateway --generate-config

unzip ngrok-stable-linux-amd64.zip > /dev/null 2>&1

jupyter trust MergeSortRep.ipynb

jupyter kernelgateway --KernelGatewayApp.api='kernel_gateway.notebook_http' --KernelGatewayApp.seed_uri='~/MergeSortRep.ipynb'
